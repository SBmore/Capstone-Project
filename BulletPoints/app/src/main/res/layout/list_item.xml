<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_bottom_margin"
    android:layout_marginStart="@dimen/list_item_end_margin"
    android:layout_marginLeft="@dimen/list_item_end_margin"
    android:layout_marginEnd="@dimen/list_item_start_margin"
    android:layout_marginRight="@dimen/list_item_start_margin"
    android:layout_marginTop="@dimen/list_item_top_margin"
    android:elevation="@dimen/card_elevation"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scrim" />

            <TextView
                android:id="@+id/article_title"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                android:maxLines="@integer/title_max_lines"
                android:paddingStart="@dimen/article_title_start"
                android:paddingLeft="@dimen/article_title_start"
                android:paddingEnd="@dimen/article_title_end"
                android:paddingRight="@dimen/article_title_end"
                android:paddingBottom="@dimen/article_title_bottom"
                android:paddingTop="@dimen/article_title_top"
                android:textColor="@color/white"
                android:textSize="@dimen/list_title_text_size" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/article_author"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="@integer/author_max_lines"
                android:paddingStart="@dimen/article_author_start"
                android:paddingEnd="@dimen/article_author_end"
                android:paddingLeft="@dimen/article_author_start"
                android:paddingRight="@dimen/article_author_end"
                android:paddingBottom="@dimen/article_author_bottom"
                android:paddingTop="@dimen/article_author_top"
                android:singleLine="true"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/list_subtitle_text_size" />
        </FrameLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
